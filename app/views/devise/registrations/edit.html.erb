
<div class="row">
  <div class="span5">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "well", method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <legend>Edit <%= resource_name.to_s.humanize %></legend>
        <div class="field">
          <%= f.input :email, autofocus: true %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <i>(leave Password blank if you don't want to change it)</i><br />
          <%= f.input :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.input :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field">
          <i>(we need your current password to confirm your changes)</i><br />
          <%= f.input :current_password, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.button :submit, "Update" %>
      </div></br>
    </fieldset>
    <% end %>
    <legend>Cancel my account</legend>

      <p>Unhappy?</p>
      <p> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
  </div>
</div>
